.save-btn {
  width: 120px;
  height: 30px;
  color: #fff;
  border: 1px solid #eee;
  border-radius: 15px;
  background: linear-gradient(to left, #1579b7, #07baca);
  transform: scale(1, 1);
  transition: all 0.2s ease;
}
.save-btn:active {
  transform: scale(1.1, 0.9);
}